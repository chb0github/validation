<?xml version="1.0" encoding="UTF-8"?>
<constraint-mappings xmlns="http://jboss.org/xml/ns/javax/validation/mapping"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/xml/ns/javax/validation/mapping validation-mapping-1.1.xsd"
	version="1.1">

	<constraint-definition annotation="javax.validation.constraints.Size">
		<validated-by include-existing-validators="true">
			<value>org.bongiorno.validation.validator.jsr349.size.SizeValidatorForMultipartFile
			</value>
		</validated-by>
	</constraint-definition>
	
	<constraint-definition annotation="javax.validation.constraints.Past">
		<validated-by include-existing-validators="true">
			<value>org.bongiorno.validation.validator.jsr349.past.PastValidatorForChronoLocalDate
			</value>
			<value>org.bongiorno.validation.validator.jsr349.past.PastValidatorForInstant
			</value>
			<value>org.bongiorno.validation.validator.jsr349.past.PastValidatorForChronoLocalDateTime
			</value>
			<value>org.bongiorno.validation.validator.jsr349.past.PastValidatorForOffsetDateTime
			</value>
			<value>org.bongiorno.validation.validator.jsr349.past.PastValidatorForYear
			</value>
			<value>org.bongiorno.validation.validator.jsr349.past.PastValidatorForYearMonth
			</value>
			<value>org.bongiorno.validation.validator.jsr349.past.PastValidatorForChronoZonedDateTime
			</value>
		</validated-by>
	</constraint-definition>
	
	<constraint-definition annotation="javax.validation.constraints.Future">
		<validated-by include-existing-validators="true">
			<value>org.bongiorno.validation.validator.jsr349.future.FutureValidatorForChronoLocalDate
			</value>
			<value>org.bongiorno.validation.validator.jsr349.future.FutureValidatorForInstant
			</value>
			<value>org.bongiorno.validation.validator.jsr349.future.FutureValidatorForChronoLocalDateTime
			</value>
			<value>org.bongiorno.validation.validator.jsr349.future.FutureValidatorForOffsetDateTime
			</value>
			<value>org.bongiorno.validation.validator.jsr349.future.FutureValidatorForYear
			</value>
			<value>org.bongiorno.validation.validator.jsr349.future.FutureValidatorForYearMonth
			</value>
			<value>org.bongiorno.validation.validator.jsr349.future.FutureValidatorForChronoZonedDateTime
			</value>
		</validated-by>
	</constraint-definition>
</constraint-mappings>